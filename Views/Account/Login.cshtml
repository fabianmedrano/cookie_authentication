@model cookie_authentication.Views.ViewModels.Account.UserLoginViewMosdel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Login";
}


<div class="flex-container">
    <div class="box">  
        <form id="form-login" asp-controller="account" asp-action="login" method="post">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input  asp-for="Username"/>
                <label for="Username" class="error_message help-block"></label>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <label for="Password" class="error_message help-block"></label>
            </div>
            <button type="submit">Ingresar</button>
        </form>
    </div>
    @section Scripts {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.js" asp-append-version="true"></script>
        <script src="~/js/validate-custom-rules.js" asp-append-version="true"></script>
        <script src="~/js/account/login.js" asp-append-version="true"></script>
    }
</div>
